<% if current_user.admin? %>
  <div class="row">
    <%= render 'admins/shared/options' %>
    <div class="col-10">
      <div class="row">
        <div class="col text-center">
          <h1 class="text-dark fw-bold ms-4 mt-4">Welcome <%= current_user.fullname %></h1>
          <hr class="border border-primary border-3 opacity-75 ">
        </div>
      </div>
      <div class="row mt-4 ps-5">
        <div class="col">
          <%= render 'users_count' %>
        </div>
      </div>
      <div class="row my-3 ps-5">
        <div class="col">
          <%= render 'admins/shared/drinks_count' %>
          <%= link_to 'Drinks List', drinks_admins_path, class: 'text-decoration-none fs-4 fw-bold mt-0 pt-0' %>
        </div>
      </div>
      <div class="row my-3 ps-5">
        <div class="col">
          <%= render 'snacks_count' %>
          <%= link_to 'Snacks List', snacks_admins_path, class: 'text-decoration-none fs-4 fw-bold mt-0 pt-0' %>
        </div>
      </div>
      <div class="row my-3 ps-5">
        <div class="col">
          <%= render 'promos_count' %>
          <%= link_to 'Promos List', promos_admins_path, class: 'text-decoration-none fs-4 fw-bold mt-0 pt-0' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
