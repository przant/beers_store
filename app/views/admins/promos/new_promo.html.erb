      <div class="row">
        <div class="col text-center">
          <h1 class="text-dark fw-bold ms-4 mt-4">Welcome <%= current_user.fullname %></h1>
          <hr class="border border-primary border-3 opacity-75 ">
        </div>
      </div>
      <div class="row my-5 ps-5">
        <div class="col-6">
          <h3 class="text-secondary fw-bold">Create New Promo</h3>
          <%= render 'new_promo_form' %>
